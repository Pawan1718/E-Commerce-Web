@using SushmaElectrical.ViewModels
@model SushmaElectrical.ViewModels.EditProductViewModel

@{
    ViewData["Title"] = "Edit";
}
<div class="container"></div>

<h1>Edit</h1>

<h4>ProductViewModel</h4>
<hr />

<div class="row">
    <form asp-action="Edit" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <input type="hidden" asp-for="Id" class="form-control" />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="border rounded p-4 shadow-sm">
                    <div class="mb-3">
                        <label for="ProductName" class="form-label">Product Name</label>
                        <input type="text" id="ProductName" asp-for="ProductName" class="form-control" />
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label for="CategoryId" class="form-label">Category</label>
                        <select id="CategoryId" asp-for="CategoryId" class="form-select" asp-items="@ViewBag.CategoryList">
                            <option value="" selected disabled>-- Select Category --</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label for="Description" class="form-label">Description</label>
                        <textarea id="Description" asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label for="Brand" class="form-label">Brand</label>
                        <input type="text" id="Brand" asp-for="Brand" class="form-control" />
                        <span asp-validation-for="Brand" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class=" border rounded p-4 shadow-sm">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="Voltage" class="form-label">Voltage</label>
                            <input type="text" id="Voltage" asp-for="Voltage" class="form-control" />
                            <span asp-validation-for="Voltage" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="PowerRating" class="form-label">Power Rating</label>
                            <input type="text" id="PowerRating" asp-for="PowerRating" class="form-control" />
                            <span asp-validation-for="PowerRating" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="Quantity" class="form-label">Quantity</label>
                            <input type="text" id="Quantity" asp-for="Quantity" class="form-control" />
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="ModelNumber" class="form-label">Model Number</label>
                            <input type="text" id="ModelNumber" asp-for="ModelNumber" class="form-control" />
                            <span asp-validation-for="ModelNumber" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="border rounded p-4 shadow-sm">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="NetPrice" class="form-label">Net Price</label>
                            <input type="text" id="NetPrice" asp-for="NetPrice" class="form-control" />
                            <span asp-validation-for="NetPrice" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="GrossPrice" class="form-label">Gross Price</label>
                            <input type="text" id="GrossPrice" asp-for="GrossPrice" class="form-control" readonly />
                            <span asp-validation-for="GrossPrice" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="Discount" class="form-label">Discount (%)</label>
                            <select id="Discount" asp-for="Discount" class="form-select">
                                <option value="" selected disabled>-- Select Discount --</option>
                                <option value="0">N/A</option>
                                <option value="5">5%</option>
                                <option value="10">10%</option>
                                <option value="15">15%</option>
                                <option value="20">20%</option>
                                <!-- Add other percentage options as needed -->
                            </select>
                            <span asp-validation-for="Discount" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="Tax" class="form-label">GST (%)</label>
                            <select id="Tax" asp-for="Tax" class="form-select">
                                <option value="" selected disabled>-- Select TAX --</option>
                                <option value="0">N/A</option>
                                <option value="5">GST-5%</option>
                                <option value="8">GST-8%</option>
                                <option value="12">GST-12%</option>
                                <option value="18">GST-18%</option>
                                <option value="28">GST-28%</option>
                                <!-- Add other GST options as needed -->
                            </select>
                            <span asp-validation-for="Tax" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="mb-3 border rounded p-4 shadow-sm">
            <div class="row">
                @foreach (var imageUrl in Model.ImageUrl.Split(new char[] { ',' }, StringSplitOptions.RemoveEmptyEntries))
                {
                    <div class="col-3">
                        <img src="@imageUrl" alt="Product Image" class="product-image img-thumbnail" />
                    </div>
                }
            </div>
            <div class="mt-3">
                <label for="ProductImages" class="form-label">Product Images</label>
                <input type="file" id="ProductImages" asp-for="ChooseImage" class="form-control" multiple />
            </div>
        </div>


        <div class="form-group col-lg-12">
            <input type="submit" value="Update" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Back</a>
        </div>
    </form>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="~/js/pricecomponent.js"></script>

}
