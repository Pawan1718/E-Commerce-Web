@using static SushmaElectrical.ViewModels.CategoryViewModel
@model PagedCategoryViewModel

<div class="container">
<h1>Category List</h1>

<div class="text-end">
    <a asp-action="Create" class="btn btn-sm btn-primary">Add New Category</a>
</div>

<div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
            <tr>
                <th>Category</th>
                <th>Description</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Categories)
            {
                <tr>
                    <td>@item.CategoryName</td>
                    <td>@item.Description</td>
                    <td>
                        <a class="btn btn-sm btn-outline-info me-2" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<nav aria-label="Page navigation" class="mt-4">
    <ul class="pagination justify-content-end">
        <li class="page-item @(Model.PageInfo.HasPrevious ? "" : "disabled")">
            <a class="page-link" asp-route-PageNo="@(Model.PageInfo.PageNo - 1)" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>
        @for (int i = 1; i <= Model.PageInfo.TotalPages; i++)
        {
            <li class="page-item @(Model.PageInfo.PageNo == i ? "active" : "")">
                <a class="page-link" asp-route-PageNo="@i">@i</a>
            </li>
        }
        <li class="page-item @(Model.PageInfo.HasNext ? "" : "disabled")">
            <a class="page-link" asp-route-PageNo="@(Model.PageInfo.PageNo + 1)" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>
    </ul>
</nav>
</div>